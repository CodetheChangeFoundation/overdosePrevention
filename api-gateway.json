{
  "swagger": "2.0",
  "info": {
    "description": "Climate Hub API",
    "version": "1.0.0",
    "title": "Climate Hub API",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "pritpal@codethechange.ca"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "https://CodetheChangeFoundation.github.io/climatehub-api/",
  "basePath": "/",
  "tags": [
    {
      "name": "city"
    },
    {
      "name": "site"
    },
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/city": {
      "get": {
        "tags": [
          "city"
        ],
        "summary": "Get all cities",
        "operationId": "city-get-all",
        "responses": {
          "200": {
            "description": "All cities",
            "schema": {
              "$ref": "#/definitions/City"
            }
          }
        }
      }
    },
    "/city/{cid}": {
      "get": {
        "tags": [
          "city"
        ],
        "summary": "Get specified group",
        "operationId": "city-get-gid",
        "parameters": [
          {
            "in": "path",
            "name": "cid",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Specified group",
            "schema": {
              "$ref": "#/definitions/City"
            }
          },
          "400": {
            "description": "Bad request parameters"
          }
        }
      }
    },
    "/city/{cid}/site": {
      "get": {
        "tags": [
          "site"
        ],
        "summary": "Get all sites that belong to a city",
        "operationId": "city-get-individuals",
        "parameters": [
          {
            "in": "path",
            "name": "sid",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "All sites in cites",
            "schema": {
              "$ref": "#/definitions/Site"
            }
          },
          "400": {
            "description": "Bad request parameters"
          }
        }
      }
    },
  "definitions": {
    "City": {
      "type": "object",
      "properties": {
        "CID": {
          "type": "integer"
        },
        "TAGS":{
          "type": "string"
        },
      }
    },
    "Site": {
      "type": "object",
      "properties": {
        "SID": {
          "type": "integer"
        },
        "TAGS":{
          "type": "string"
        }
      }
    }
  }
}
}